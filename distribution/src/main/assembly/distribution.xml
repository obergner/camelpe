<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>camelpe-distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/assembly/LICENSE.txt</source>
		</file>
		<file>
			<source>src/main/assembly/NOTICE.txt</source>
		</file>
		<file>
			<source>src/main/assembly/README.txt</source>
		</file>
		<file>
			<source>src/main/assembly/slf4j-license.txt</source>
			<outputDirectory>lib/org.slf4j/</outputDirectory>
		</file>
	</files>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>net.camelpe:camelpe-api</include>
				<include>net.camelpe:camelpe-extension</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>src/${module.artifactId}</outputDirectory>
						<directory>src/main/java</directory>
					</fileSet>
				</fileSets>
			</sources>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<unpack>false</unpack>
				<outputDirectory>dist</outputDirectory>
				<outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<unpack>false</unpack>
			<useProjectArtifact>true</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<outputFileNameMapping>${artifact.groupId}/${artifact.artifactId}-${artifact.version}.${artifact.packaging}</outputFileNameMapping>
			<useStrictFiltering>true</useStrictFiltering>
			<excludes>
				<exclude>net.camelpe:*</exclude>
				<exclude>org.apache.camel:*</exclude>
				<exclude>org.fusesource.commonman:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>