<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-4_0_0.xsd">
	<parent>
		<groupId>com.acme.orderplacement.jee</groupId>
		<artifactId>orderplacement.jee</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.acme.orderplacement.jee</groupId>
	<artifactId>orderplacement.jee.ear</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>ear</packaging>

	<name><![CDATA[SOA Order :: JEE :: EAR]]></name>

	<profiles>
		<profile>
			<id>profile.appsrv.Glassfish</id>
			<dependencies>
				<!--
					Provided dependencies: Note that these dependencies' default scope
					of 'provided' is overridden in favor of the 'compile' or 'runtime'
					scope if we do not explicitly reset it to 'provided' here.
				-->
				<dependency>
					<groupId>org.hibernate.javax.persistence</groupId>
					<artifactId>hibernate-jpa-2.0-api</artifactId>
					<scope>provided</scope>
				</dependency>
				<!--
					| Compile time dependencies 
				-->
				<!--
					| Runtime dependencies 
				-->
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate-entitymanager</artifactId>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>com.acme.orderplacement.jee.framework</groupId>
					<artifactId>orderplacement.jee.framework.glassfish</artifactId>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>profile.appsrv.JBoss</id>
			<dependencies>
				<!--
					Provided dependencies: Note that these dependencies' default scope
					of 'provided' is overridden in favor of the 'compile' or 'runtime'
					scope if we do not explicitly reset it to 'provided' here.
				-->
				<!--
					| Compile time dependencies 
				-->
				<!--
					| Runtime dependencies 
				-->
				<dependency>
					<groupId>com.acme.orderplacement.jee.framework</groupId>
					<artifactId>orderplacement.jee.framework.jboss</artifactId>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<dependencies>
		<!--
			Provided dependencies: Note that these dependencies' default scope of
			'provided' is overridden in favor of the 'compile' or 'runtime' scope
			if we do not explicitly reset it to 'provided' here.
		-->
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.transaction</groupId>
			<artifactId>jta</artifactId>
			<scope>provided</scope>
		</dependency>
		<!--
			| Compile time dependencies 
		-->
		<!--
			| Runtime dependencies 
		-->
		<dependency>
			<groupId>com.acme.orderplacement.jee.item</groupId>
			<artifactId>orderplacement.jee.item.persistence</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.item</groupId>
			<artifactId>orderplacement.jee.item.service</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.item</groupId>
			<artifactId>orderplacement.jee.item.itemimport</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.framework</groupId>
			<artifactId>orderplacement.jee.framework.jmslog</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
		</dependency>
		<!--
			HACK: Due to some bug in m2eclipse, we have to explicitly declare a
			dependency on this artifact in this pom, so that it gets included in
			META-INF/lib. See below
		-->
		<dependency>
			<groupId>com.acme.orderplacement.jee.framework</groupId>
			<artifactId>orderplacement.jee.framework.common</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.framework</groupId>
			<artifactId>orderplacement.jee.framework.camelpe</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.app</groupId>
			<artifactId>orderplacement.jee.app.config</artifactId>
			<scope>runtime</scope>
		</dependency>
		<!--
			Has to be explicitly included due to the skinny wars-problem:
			http://maven.apache.org/plugins/maven-war-plugin/examples/skinny-wars.html
		-->
		<!--
			| Test dependencies 
		-->
	</dependencies>

	<build>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/application</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>${jee.applicationXml.version}</version>
					<!--
						Needed to make resource filtering work: see
						http://www.mail-archive.com/users@maven.apache.org/msg59229.html
					-->
					<earSourceDirectory>${project.build.outputDirectory}
					</earSourceDirectory>
					<archive>
						<index>true</index>
						<manifest>
							<addClasspath>false</addClasspath>
							<addDefaultSpecificationEntries>true
							</addDefaultSpecificationEntries>
							<addDefaultImplementationEntries>true
							</addDefaultImplementationEntries>
						</manifest>
					</archive>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<ejbModule>
							<groupId>com.acme.orderplacement.jee.item</groupId>
							<artifactId>orderplacement.jee.item.persistence</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.acme.orderplacement.jee.item</groupId>
							<artifactId>orderplacement.jee.item.service</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.acme.orderplacement.jee.item</groupId>
							<artifactId>orderplacement.jee.item.itemimport</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.acme.orderplacement.jee.framework</groupId>
							<artifactId>orderplacement.jee.framework.jmslog</artifactId>
						</ejbModule>
						<!--
							TODO: I would like to explicitly set this web module's context
							root to a proper value instead of the '/orderplacement.jee.ws'
							generated by maven. There is, however, a bug either in m2eclipse
							or - more likely - in the maven-ear-plugin that prevents me from
							doing so. See http://jira.codehaus.org/browse/MNGECLIPSE-231.
						-->
						<!--
							<warModule> <groupId>com.acme.orderplacement.jee </groupId>
							<artifactId>orderplacement.jee.ws </artifactId>
							<contextRoot>orderplacement</contextRoot> </warModule>
						-->
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>